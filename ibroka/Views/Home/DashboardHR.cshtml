<script type="text/javascript">


  AmCharts.makeChart("chartdiv",

    {
	"type": "serial",
      "categoryField": "category",
  "colors": [
		"#54c0f6",
		"#FF69B4",
		"#B0DE09",
		"#0D8ECF",
		"#2A0CD0",

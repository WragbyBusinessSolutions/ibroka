          description = $(this).attr('Selected-Description');

          //console.log(description, department);


          $('input[name=Insid]').val(aEditInsId);
          $('input[name=eName]').val(name);
          $('input[name=eDisplayName]').val(displayName);
          $('input[name=ePhoneNo]').val(phoneNo);
          $('input[name=eEmail]').val(email);
          $('input[name=eAddress]').val(address);
          $('input[name=eWebUrl]').val(webUrl);
          $('textarea[name=eDescription]').val(description);

        });

      //End of the code


</script>



        }
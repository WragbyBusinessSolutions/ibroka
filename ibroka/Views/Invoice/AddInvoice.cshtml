
@{
    ViewData["Title"] = "Add Invoice";
    Layout = "~/Views/Shared/_LayoutAccountInventory.cshtml";
}
<style>


    .invoice-body {
        margin-top: 40px;
    }

    .invoice-card {
        margin-left: 3%;
        margin-right: 3%;
    }

    .hidden-info {
        visibility: hidden;
    }

    .total-section {
        margin-top: 40px;
    }

    .customer-button {
        width: 200px;
        height: 160px;
        border-radius: 6px;
        background-color: #fff;
    }
    .table-item{
        font-size: 12px;
    }
</style>


<div class="content">

    <div class="row">
        <div class="col-md-2">
        </div>

        <div class="col-md-8 ">
            <div class="card card-body printableArea invoice-card">



                <div class="row">
                    <div class="row pull-left invoice-card">
                        <h5>Invoice No:</h5>

                        <div class="">

                            <div class="col-lg-12">
                                <input type="number" class="form-control" placeholder="#" />
                            </div>

                        </div>
                    </div>

                    <div class="col-lg-12">
                        <hr />
                    </div>

                    <div class="row">

                        <div class="col-lg-12">

                            <p class="text-muted m-l-5 pull-right hidden-info">
                                <b class="text-danger spanlabel">OrganisationName</b>
                                <br />
                                .Organisation.Address
                                <br /> Organisation.City,
                                <br /> Organisation.State,
                                <br /> Organisation.Country
                                <br />Organisation.ZipCode
                            </p>
                        </div>
                    </div>
                    <div class="row invoice-card">
                        <div class="col-md-12">
                            <div class="pull-right text-right col-md-4">

                                <p>

                                    <b>Invoice Date:</b>

                                    <input type="date" class="form-control" />

                                </p>
                                <p>
                                    <b>Due Date :</b>
                                   
                                    <input type="date" class="form-control" />
                                    <span class="text-danger"></span>
                                </p>

                            </div>


                            <div class="btn-group col-md-6">
                                <button type="button" class="form-control customer-button dropright dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img src="~/assets/img/user22.png" height="20" width="20" /> Add a customer
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="#"><input type="text" class="form-control" placeholder="type a customer name" /></a>

                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">+ Add new customer</a>

                                 
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 align-items-center invoice-body">

                            <input class="form-control text-center" placeholder="INVOICE TITLE" />

                        </div>

                        <div class="row">
                            <div class="col-md-12 invoice-body">
                                <div class="table-responsive-sm" style="overflow:auto;">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th class="table-item"><strong>Item</strong></th>
                                                <th><strong>Description</strong></th>
                                                <th><strong>Quantity</strong></th>
                                                <th><strong>Unit Cost</strong></th>
                                                <th><strong>Total</strong></th>
                                                <th>+/-</th>

                                            </tr>
                                        </thead>
                                        <tbody>

                                            <tr>

                                                <td>

                                                    <input type="text" class="form-control" placeholder="Item/Service">
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" placeholder="Description">
                                                </td>
                                                <td class="text-right">
                                                    <input type="number" class="form-control text-right" placeholder="0">
                                                </td>
                                                <td class="text-right">
                                                    <input type="number" class="form-control text-right" placeholder="0.00">
                                                </td>
                                                <td class="text-right">
                                                    <input disabled type="number" class="form-control text-right" placeholder="0">
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-success">+</button>
                                                </td>

                                            </tr>

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 total-section">
                            <div class="pull-right text-right">
                                <p>Sub - Total amount:  ₦0.00</p>
                                <p>
                                    <input type="checkbox" checked disabled /> vat (5%) : ₦0.00
                                </p>
                                <hr>
                                <h3>
                                    <b>Total :</b> ₦0.00
                                </h3>
                            </div>
                            <div class="clearfix"></div>
                            <hr>
                            <div class="text-right">
                                <button class="btn btn-success" type="submit"> Done  </button>
                                <button id="print" class="btn btn-info btn-outline" type="button"> <span><i class="fa fa-print"></i> Save</span> </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
            </div>

        </div>


    </div>
</div>
<script>
    $('#myModal').modal(options)
</script>
